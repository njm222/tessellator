{
  "exclude": ["node_modules"],
  "extends": "@tessellator/tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      // Other types...
      // This allows Serwist to type `window.serwist`.
      "@serwist/next/typings"
    ]
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"]
}
